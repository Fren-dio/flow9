include wase/lib/wasi;

printi8(i : i32) -> () {
	// What offset to write from
	store<>(0, 12);
	// How many bytes to write
	store<>(4, 1);
	// The byte to write
	store<>(12, i);

	// Print it to stdout
	fd_write(1, 0, 1, 8);
	{}
}

