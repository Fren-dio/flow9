import material/material2tropic;
import components/mwigi/mwigi/mw_wigify;

main() {
	setRendererType("html");

	changed = make(false);
	changed2 = make(false);
	fpprint("changed")(changed);
	fpprint("changed2")(changed2);

	mat = 
		MInspect([ITextWidthChanged(changed)],
			MLines([
				MCols2(
					MText("fungerer som ", [MSubheading()]),
					MText("indirekte", [MCustomFont(16.0, "RobotoMedium", 0.87)])
				),
				MCols2(
					MText("samme tal", [MCustomFont(16.0, "RobotoMedium", 0.87)]),
					MText(".", [MSubheading()])
				),
				MCols2(
					MText("tilfæ‎lde den ", [MSubheading()]),
					MText("røde", [MCustomFont(16.0, "RobotoMedium", 0.87)])
				)
			])
		);

	wigi =
		MLines([
			MWigify(
				WigiParagraph([
					WigiText("fungerer som ", []),
					WigiText("indirekte", [FontFamily("RobotoMedium")])
				], []),
				TFixed(300., 300.),
				getDefaultMWStyle(),
				[]
			),
			MWigify(
				WigiParagraph([
					WigiText("samme tal", [FontFamily("RobotoMedium")]),
					WigiText(".", [])
				], []),
				TFixed(300., 300.),
				getDefaultMWStyle(),
				[]
			),
			MWigify(
				WigiParagraph([
					WigiText("tilfæ‎lde den ", []),
					WigiText("røde", [FontFamily("RobotoMedium")])
				], []),
				TFixed(300., 300.),
				getDefaultMWStyle(),
				[]
			)
		]);

	content =
		MLines([
			MText("Pure Material :", []),
			mat |> MBorderTop(8.),
			MText("Wigi :", []) |> MBorderTop(20.),
			wigi |> MBorderTop(8.),
			MInspect([ITextWidthChanged(changed2)], TRectangle([MFill(MGreen(200))], TFixed(100., 100.)))
		])
		|> MBorderTop(200.);
		
	mrender(makeMaterialManager([]), true, content)
}