import fabric/fabric;

main() {
	ui = BLet("counter", 0,
		BCols([
			BTextInput("counter", [], []),
			BTextButton("COUNT", \env -> {
				nextFabricValue(env, "counter", i2s(s2i(getFabricStringValue(env, "counter")) + 1));
			}, [], []),
			BSelect(["counter"], \env, args -> {
				BText("Counter: " + i2s(args[0]), [])
			})
		], defBContainer())	
	);
	brender(ui);
}
